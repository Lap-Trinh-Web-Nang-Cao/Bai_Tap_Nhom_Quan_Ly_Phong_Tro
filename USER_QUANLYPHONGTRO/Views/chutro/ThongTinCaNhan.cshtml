@model USER_QUANLYPHONGTRO.Models.ViewModels.ChuTro.LandlordProfileViewModel

@{
    Layout = "~/Views/Shared/_ChutroLayout.cshtml";
    ViewBag.Title = "Thông tin cá nhân";
}

<div class="dashboard-container">
    <div class="dashboard-header">
        <h1 class="page-title">Hồ sơ cá nhân</h1>
    </div>

    <div class="chart-card" style="max-width: 700px; margin: 0 auto;">
        <div class="chart-body" style="padding: 40px;">
            @using (Html.BeginForm("CapNhatThongTin", "ChuTro", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div style="text-align: center; margin-bottom: 40px;">
                    <div style="width: 100px; height: 100px; background: #e3f2fd; border-radius: 50%; display: inline-flex; align-items: center; justify-content: center; color: #1976d2; margin-bottom: 15px;">
                        <span class="material-icons" style="font-size: 50px;">person</span>
                    </div>
                    <h3 style="margin: 0; font-size: 1.5rem;">@Model.HoTen</h3>
                    <p style="color: #888; margin-top: 5px;">@Model.Email</p>
                </div>

                <div class="form-group" style="margin-bottom: 20px;">
                    <label style="font-weight: 600; display: block; margin-bottom: 8px; color: #444;">Họ và tên</label>
                    @Html.TextBoxFor(m => m.HoTen, new { @class = "form-control", @style = "width: 100%; padding: 12px; border: 1px solid #e0e0e0; border-radius: 8px; background: #f9f9f9;" })
                </div>
                <div class="form-group" style="margin-bottom: 20px;">
                    <label style="font-weight: 600; display: block; margin-bottom: 8px; color: #444;">Số điện thoại</label>
                    @Html.TextBoxFor(m => m.DienThoai, new { @class = "form-control", @style = "width: 100%; padding: 12px; border: 1px solid #e0e0e0; border-radius: 8px; background: #f9f9f9;" })
                </div>

                <div class="form-group" style="margin-bottom: 20px;">
                    <label style="font-weight: 600; display: block; margin-bottom: 8px; color: #444;">Giấy tờ tùy thân (CCCD)</label>
                    @Html.TextBoxFor(m => m.LoaiGiayTo, new { @class = "form-control", @style = "width: 100%; padding: 12px; border: 1px solid #e0e0e0; border-radius: 8px; background: #f9f9f9;" })
                </div>

                <div class="form-group" style="margin-bottom: 30px;">
                    <label style="font-weight: 600; display: block; margin-bottom: 8px; color: #444;">Địa chỉ liên hệ</label>
                    @Html.TextAreaFor(m => m.DiaChi, new { @class = "form-control", @style = "width: 100%; padding: 12px; border: 1px solid #e0e0e0; border-radius: 8px; background: #f9f9f9;", rows = "3" })
                </div>

                <button type="submit" class="btn-view-all" style="width: 100%; text-align: center; background-color: var(--primary-color, #4e73df); color: white; border: none; padding: 15px; border-radius: 8px; font-size: 16px; cursor: pointer;">Lưu thay đổi</button>
            }
        </div>
    </div>
</div>