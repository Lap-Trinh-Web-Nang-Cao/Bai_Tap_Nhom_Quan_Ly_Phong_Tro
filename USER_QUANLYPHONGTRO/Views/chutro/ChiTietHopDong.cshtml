@model USER_QUANLYPHONGTRO.Models.ViewModels.ChuTro.ChiTietHopDongViewModel

@{
    Layout = "~/Views/Shared/_ChutroLayout.cshtml";
    ViewBag.Title = "Chi tiết hợp đồng";
}

<div class="dashboard-container">
    <div class="dashboard-header">
        <h1 class="page-title">Chi tiết thuê phòng</h1>
        <a href="@Url.Action("HopDong", "ChuTro")" class="btn-action" style="text-decoration: none;">← Quay lại danh sách</a>
    </div>

    <div class="chart-card" style="max-width: 900px; margin: 0 auto;">
        <div class="chart-header" style="border-bottom: 1px solid #eee;">
            <h3 class="chart-title">Hợp đồng #@Model.DatPhongId.ToString().Substring(0, 8).ToUpper()</h3>
            <span class="status-badge status-confirmed">Đang hiệu lực</span>
        </div>
        <div class="chart-body" style="padding: 30px;">
            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 40px;">
                <div>
                    <h4 style="color: #888; text-transform: uppercase; font-size: 0.8rem; margin-bottom: 15px; letter-spacing: 1px;">Bên cho thuê (Chủ trọ)</h4>
                    <div style="font-weight: bold; font-size: 1.1rem; margin-bottom: 5px;">@Model.TenChuTro</div>
                    <div style="color: #555;">SĐT: @Model.SdtChuTro</div>
                </div>

                <div>
                    <h4 style="color: #888; text-transform: uppercase; font-size: 0.8rem; margin-bottom: 15px; letter-spacing: 1px;">Bên thuê (Khách hàng)</h4>
                    <div style="display: flex; align-items: center; gap: 15px; margin-bottom: 10px;">
                        <img src="/images/user-default.png" style="width: 50px; height: 50px; border-radius: 50%;" />
                        <div>
                            <div style="font-weight: bold; font-size: 1.1rem;">@Model.TenNguoiThue</div>
                            <div style="color: #555;">CCCD: @Model.CCCD</div>
                        </div>
                    </div>
                    <div style="color: #555;">SĐT: <a href="tel:@Model.SdtNguoiThue">@Model.SdtNguoiThue</a></div>
                </div>
            </div>

            <div style="margin-top: 40px; background: #f9f9f9; padding: 20px; border-radius: 8px;">
                <h4 style="color: #888; text-transform: uppercase; font-size: 0.8rem; margin-bottom: 15px; letter-spacing: 1px;">Thông tin thuê</h4>
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px;">
                    <div>
                        <p><strong>Phòng:</strong> @Model.TenPhong</p>
                        <p><strong>Địa chỉ:</strong> @Model.DiaChi</p>
                    </div>
                    <div>
                        <p><strong>Giá thuê:</strong> <span style="color: #2ecc71; font-weight: bold;">@Model.GiaTien.ToString("N0") VNĐ/tháng</span></p>
                        <p><strong>Ngày bắt đầu:</strong> @Model.NgayBatDau.ToString("dd/MM/yyyy")</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>