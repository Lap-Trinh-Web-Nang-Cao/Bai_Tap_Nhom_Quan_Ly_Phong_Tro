@model USER_QUANLYPHONGTRO.Models.ViewModels.ChuTro.LandlordDashboardViewModel

@{
    Layout = "~/Views/Shared/_ChutroLayout.cshtml";
    ViewBag.Title = "Tổng quan";
}

<div class="dashboard-container">
    <!-- Header -->
    <div class="dashboard-header">
        <div>
            <h1 class="page-title">Chào buổi sáng, @(Session["UserName"] ?? "Chủ Trọ")!</h1>
            <p class="page-subtitle">Đây là những gì đang diễn ra với các phòng trọ của bạn hôm nay.</p>
        </div>
        <select id="timeFilter" class="time-filter">
            <option value="30days">30 ngày qua</option>
            <option value="7days">7 ngày qua</option>
            <option value="today">Hôm nay</option>
        </select>
    </div>

    <!-- Stats Grid -->
    <div class="stats-grid">
        <div class="stat-card card-blue">
            <div class="stat-content">
                <div class="stat-label">TỔNG SỐ PHÒNG</div>
                <div class="stat-value">@Model.TotalRooms</div>
                <div class="stat-desc">Số lượng phòng bạn đang quản lý</div>
            </div>
        </div>
        <div class="stat-card card-orange">
            <div class="stat-content">
                <div class="stat-label">LƯỢT XEM HÔM NAY</div>
                <div class="stat-value">@Model.ViewsToday</div>
                <div class="stat-desc">Tổng lượt xem các phòng của bạn</div>
            </div>
        </div>
        <div class="stat-card card-purple">
            <div class="stat-content">
                <div class="stat-label">LỊCH HẸN SẮP TỚI</div>
                <div class="stat-value">@Model.UpcomingSchedules</div>
                <div class="stat-desc">Các lịch hẹn xem phòng chưa diễn ra</div>
            </div>
        </div>
        <div class="stat-card card-green">
            <div class="stat-content">
                <div class="stat-label">DOANH THU THÁNG NÀY</div>
                <div class="stat-value">@Model.RevenueThisMonth.ToString("N0")đ</div>
                <div class="stat-desc">Tổng doanh thu dự kiến</div>
            </div>
        </div>
    </div>

    <!-- Charts Section -->
    <div class="charts-section">
        <div class="chart-card">
            <div class="chart-header">
                <div>
                    <h3 class="chart-title">Báo cáo doanh thu</h3>
                    <p class="chart-subtitle">Dữ liệu được cập nhật hàng ngày</p>
                </div>
                <div class="chart-filter">
                    <button class="filter-btn active" data-filter="30days">Tháng</button>
                    <button class="filter-btn" data-filter="7days">Tuần</button>
                </div>
            </div>
            <div class="chart-body">
                <canvas id="revenueChart"></canvas>
            </div>
        </div>
        <div class="chart-card">
            <div class="chart-header">
                <div>
                    <h3 class="chart-title">Lượt xem theo phòng</h3>
                    <p class="chart-subtitle">Top 5 phòng được xem nhiều nhất</p>
                </div>
            </div>
            <div class="chart-body">
                <canvas id="viewsChart"></canvas>
            </div>
        </div>
    </div>

    <!-- Activities Section -->
    <div class="activities-section">
        <div class="activities-row">
            <div class="activity-card">
                <div class="activity-header">
                    <h3 class="activity-title">Phòng chờ duyệt</h3>
                    <p class="activity-subtitle">Các phòng bạn mới đăng hoặc cập nhật</p>
                </div>
                <div class="activity-list">
                    @foreach (var room in Model.PendingRooms)
                    {
                        <div class="activity-item">
                            <div class="item-image"><img src="@Url.Content(!string.IsNullOrEmpty(room.ImageUrl) ? room.ImageUrl : "/images/logo.png")" alt="Room"></div>
                            <div class="item-content">
                                <div class="item-name">@room.Name</div>
                                <div class="item-info">Gửi lúc: @room.SubmitDate.ToString("HH:mm dd/MM/yyyy")</div>
                            </div>
                            <button class="btn-action">Xem</button>
                        </div>
                    }
                </div>
                <button class="btn-view-all">Xem tất cả phòng chờ duyệt</button>
            </div>

            <div class="activity-card">
                <div class="activity-header">
                    <h3 class="activity-title">Lịch xem phòng hôm nay</h3>
                    <p class="activity-subtitle">Các lịch hẹn đã được xác nhận cho hôm nay</p>
                </div>
                <div class="activity-list">
                    @foreach (var schedule in Model.TodaySchedules)
                    {
                        <div class="activity-item">
                            <div class="item-avatar"><span class="material-icons">person</span></div>
                            <div class="item-content">
                                <div class="item-name">@schedule.TenantName - @schedule.RoomName</div>
                                <div class="item-info">Thời gian: @schedule.ViewTime</div>
                            </div>
                            <span class="status-badge @(schedule.Status == "Chờ xác nhận" ? "status-pending" : "status-confirmed")">@schedule.Status</span>
                        </div>
                    }
                </div>
                <button class="btn-view-all">Quản lý lịch xem phòng</button>
            </div>
        </div>

        <div class="activities-row">
            <div class="activity-card">
                <div class="activity-header">
                    <h3 class="activity-title">Tin nhắn gần đây</h3>
                    <p class="activity-subtitle">Những tin nhắn mới nhất từ người thuê</p>
                </div>
                <div class="activity-list">
                    @foreach (var message in Model.RecentMessages)
                    {
                        <div class="activity-item">
                            <div class="item-avatar"><img src="@Url.Content(!string.IsNullOrEmpty(message.Avatar) ? message.Avatar : "/images/logo.png")" alt="Avatar"></div>
                            <div class="item-content">
                                <div class="item-name">@message.SenderName</div>
                                <div class="item-message">@message.Content</div>
                                <div class="item-time">@message.Time</div>
                            </div>
                            <button class="btn-action">Trả lời</button>
                        </div>
                    }
                </div>
                <button class="btn-view-all">Đi đến hộp thư</button>
            </div>

            <div class="activity-card">
                <div class="activity-header">
                    <h3 class="activity-title">Yêu cầu sửa chữa</h3>
                    <p class="activity-subtitle">Các yêu cầu mới từ người thuê phòng</p>
                </div>
                <div class="activity-list">
                    @foreach (var request in Model.MaintenanceRequests)
                    {
                        <div class="activity-item">
                            <div class="item-avatar"><span class="material-icons">build</span></div>
                            <div class="item-content">
                                <div class="item-name">@request.Title - @request.RoomName</div>
                                <div class="item-info">Báo cáo bởi: @request.ReporterName</div>
                            </div>
                            <span class="status-badge priority-@request.Priority.ToLower()">@request.Priority</span>
                        </div>
                    }
                </div>
                <button class="btn-view-all">Xem tất cả yêu cầu</button>
            </div>
        </div>
    </div>
</div>