@{
    ViewBag.Title = "Chào Mừng";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var userName = Session["HoTen"] as string ?? "Khách Hàng";
}

@section styles {
    <style>
        .welcome-page {
            min-height: 100vh;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
            margin: 0 -15px;
        }

        .welcome-container {
            max-width: 900px;
            text-align: center;
            color: white;
        }

        .welcome-icon {
            font-size: 120px;
            margin-bottom: 30px;
            animation: bounce 2s infinite;
        }

        @@keyframes bounce {

            0%,
            100% {
                transform: translateY(0);
            }

            50% {
                transform: translateY(-20px);
            }
        }

        .welcome-title {
            font-size: 56px;
            font-weight: 900;
            margin-bottom: 20px;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
        }

        .welcome-subtitle {
            font-size: 24px;
            margin-bottom: 15px;
            opacity: 0.95;
        }

        .welcome-message {
            font-size: 18px;
            margin-bottom: 50px;
            opacity: 0.9;
            max-width: 600px;
            margin-left: auto;
            margin-right: auto;
            line-height: 1.6;
        }

        .quick-actions-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 25px;
            margin-bottom: 50px;
        }

        .action-card {
            background: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(10px);
            border: 2px solid rgba(255, 255, 255, 0.3);
            border-radius: 20px;
            padding: 35px 20px;
            transition: all 0.4s;
            cursor: pointer;
            text-decoration: none;
            color: white;
            display: block;
        }

        .action-card:hover {
            background: rgba(255, 255, 255, 0.25);
            transform: translateY(-10px) scale(1.05);
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
            text-decoration: none;
            color: white;
        }

        .action-card i {
            font-size: 50px;
            margin-bottom: 20px;
            display: block;
        }

        .action-card h3 {
            font-size: 20px;
            font-weight: 700;
            margin-bottom: 10px;
        }

        .action-card p {
            font-size: 14px;
            opacity: 0.9;
        }

        .main-cta {
            display: inline-flex;
            align-items: center;
            gap: 15px;
            padding: 20px 50px;
            background: white;
            color: #667eea;
            border-radius: 50px;
            font-size: 20px;
            font-weight: 800;
            text-decoration: none;
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
            transition: all 0.3s;
            margin-bottom: 40px;
        }

        .main-cta:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 50px rgba(0, 0, 0, 0.4);
            text-decoration: none;
            color: #764ba2;
        }

        .features-list {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-top: 50px;
        }

        .feature-item {
            background: rgba(255, 255, 255, 0.1);
            padding: 20px;
            border-radius: 15px;
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .feature-item i {
            font-size: 32px;
            margin-bottom: 15px;
            display: block;
        }

        .feature-item h4 {
            font-size: 18px;
            margin-bottom: 10px;
            font-weight: 700;
        }

        .feature-item p {
            font-size: 14px;
            opacity: 0.9;
        }

        .skip-link {
            color: white;
            text-decoration: underline;
            opacity: 0.7;
            transition: all 0.3s;
            font-size: 14px;
        }

        .skip-link:hover {
            opacity: 1;
            color: white;
        }

        /* Featured Rooms Section */
        .featured-rooms-section {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border-radius: 25px;
            padding: 40px 30px;
            margin: 40px 0;
            border: 2px solid rgba(255, 255, 255, 0.2);
        }

        .section-title {
            font-size: 32px;
            font-weight: 800;
            margin-bottom: 10px;
            text-align: center;
        }

        .section-subtitle {
            font-size: 16px;
            opacity: 0.9;
            text-align: center;
            margin-bottom: 35px;
        }

        .rooms-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 25px;
            margin-bottom: 25px;
        }

        .room-card {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 15px;
            overflow: hidden;
            transition: all 0.3s;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.2);
            text-decoration: none;
            display: block;
        }

        .room-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
            text-decoration: none;
        }

        .room-image {
            width: 100%;
            height: 180px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 48px;
            position: relative;
            overflow: hidden;
        }

        .room-image::after {
            content: '🏠';
            font-size: 64px;
            opacity: 0.3;
        }

        .room-rating {
            position: absolute;
            top: 10px;
            right: 10px;
            background: rgba(255, 255, 255, 0.95);
            color: #f59e0b;
            padding: 5px 12px;
            border-radius: 20px;
            font-weight: 700;
            font-size: 13px;
            display: flex;
            align-items: center;
            gap: 4px;
        }

        .room-content {
            padding: 20px;
        }

        .room-title {
            font-size: 16px;
            font-weight: 700;
            color: #2d3748;
            margin-bottom: 12px;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
            min-height: 40px;
        }

        .room-details {
            display: flex;
            gap: 15px;
            margin-bottom: 15px;
            flex-wrap: wrap;
        }

        .room-detail-item {
            display: flex;
            align-items: center;
            gap: 6px;
            color: #718096;
            font-size: 13px;
        }

        .room-detail-item i {
            color: #667eea;
        }

        .room-price {
            font-size: 22px;
            font-weight: 800;
            color: #e74c3c;
            display: flex;
            align-items: baseline;
            gap: 5px;
        }

        .room-price-unit {
            font-size: 13px;
            color: #718096;
            font-weight: 500;
        }

        .view-all-btn {
            display: inline-flex;
            align-items: center;
            gap: 10px;
            padding: 15px 35px;
            background: rgba(255, 255, 255, 0.25);
            color: white;
            border: 2px solid rgba(255, 255, 255, 0.5);
            border-radius: 50px;
            font-size: 16px;
            font-weight: 700;
            text-decoration: none;
            transition: all 0.3s;
            margin: 0 auto;
            display: inline-flex;
        }

        .view-all-btn:hover {
            background: rgba(255, 255, 255, 0.35);
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);
            text-decoration: none;
            color: white;
        }

        .empty-rooms {
            text-align: center;
            padding: 60px 20px;
            opacity: 0.8;
        }

        .empty-rooms i {
            font-size: 64px;
            margin-bottom: 20px;
            display: block;
        }
    </style>
}

<div class="welcome-page">
    <div class="welcome-container">
        <div class="welcome-icon">👋</div>

        <h1 class="welcome-title">Chào Mừng Trở Lại!</h1>

        <p class="welcome-subtitle">
            Xin chào, <strong>@userName</strong>
        </p>

        <p class="welcome-message">
            Chúng tôi rất vui được đồng hành cùng bạn trong hành trình tìm kiếm căn phòng trọ lý tưởng.
            Hãy bắt đầu khám phá ngay hôm nay!
        </p>

        <!-- Main CTA -->
        <a href="@Url.Action("Dashboard", "KhachThue")" class="main-cta">
            <i class="fa fa-home"></i>
            Vào Trang Chủ
        </a>

        <!-- Quick Actions -->
        <div class="quick-actions-grid">
            <a href="@Url.Action("DanhSachPhong", "KhachThue")" class="action-card">
                <i class="fa fa-search"></i>
                <h3>Tìm Phòng</h3>
                <p>Khám phá phòng trọ phù hợp</p>
            </a>

            <a href="@Url.Action("LichDaDat", "KhachThue")" class="action-card">
                <i class="fa fa-calendar-alt"></i>
                <h3>Lịch Hẹn</h3>
                <p>Quản lý lịch xem phòng</p>
            </a>

            <a href="@Url.Action("HopDong", "KhachThue")" class="action-card">
                <i class="fa fa-file-contract"></i>
                <h3>Hợp Đồng</h3>
                <p>Xem hợp đồng của bạn</p>
            </a>

            <a href="@Url.Action("HoaDon", "KhachThue")" class="action-card">
                <i class="fa fa-receipt"></i>
                <h3>Hóa Đơn</h3>
                <p>Thanh toán & quản lý</p>
            </a>
        </div>

        <!-- Featured Rooms Section -->
        @{
            var featuredRooms = ViewBag.FeaturedRooms as IEnumerable<dynamic>;
        }

        @if (featuredRooms != null && featuredRooms.Any())
        {
            <div class="featured-rooms-section">
                <h2 class="section-title">🌟 Phòng Trọ Nổi Bật</h2>
                <p class="section-subtitle">Những phòng trọ được đánh giá cao nhất</p>

                <div class="rooms-grid">
                    @foreach (var room in featuredRooms.Take(6))
                    {
                        <a href="@Url.Action("ChiTietPhong", "Guest", new { id = room.PhongId })" class="room-card">
                            <div class="room-image">
                                @if (room.DiemTrungBinh != null && room.DiemTrungBinh > 0)
                                {
                                    <div class="room-rating">
                                        <i class="fa fa-star"></i>
                                        @string.Format("{0:0.0}", room.DiemTrungBinh)
                                    </div>
                                }
                            </div>
                            <div class="room-content">
                                <h3 class="room-title">@room.TieuDe</h3>
                                <div class="room-details">
                                    <div class="room-detail-item">
                                        <i class="fa fa-expand-arrows-alt"></i>
                                        <span>@room.DienTich m²</span>
                                    </div>
                                    @if (room.SoNguoiToiDa != null)
                                    {
                                        <div class="room-detail-item">
                                            <i class="fa fa-users"></i>
                                            <span>@room.SoNguoiToiDa người</span>
                                        </div>
                                    }
                                </div>
                                <div class="room-price">
                                    @string.Format("{0:N0}", room.GiaTien)đ
                                    <span class="room-price-unit">/tháng</span>
                                </div>
                            </div>
                        </a>
                    }
                </div>

                <div style="text-align: center;">
                    <a href="@Url.Action("DanhSachPhong", "Guest")" class="view-all-btn">
                        <i class="fa fa-th"></i>
                        Xem Tất Cả Phòng
                    </a>
                </div>
            </div>
        }
        else
        {
            <div class="featured-rooms-section">
                <h2 class="section-title">🌟 Phòng Trọ Nổi Bật</h2>
                <div class="empty-rooms">
                    <i class="fa fa-home"></i>
                    <p>Chưa có phòng nổi bật nào</p>
                </div>
            </div>
        }

        <!-- Features -->
        <div class="features-list">
            <div class="feature-item">
                <i class="fa fa-shield-check"></i>
                <h4>An Toàn & Bảo Mật</h4>
                <p>Thông tin của bạn được bảo vệ tuyệt đối</p>
            </div>

            <div class="feature-item">
                <i class="fa fa-headset"></i>
                <h4>Hỗ Trợ 24/7</h4>
                <p>Đội ngũ luôn sẵn sàng hỗ trợ bạn</p>
            </div>

            <div class="feature-item">
                <i class="fa fa-star"></i>
                <h4>Chất Lượng Đảm Bảo</h4>
                <p>Phòng trọ được kiểm duyệt kỹ lưỡng</p>
            </div>
        </div>

        <!-- Skip Link -->
        <div style="margin-top: 40px;">
            <a href="@Url.Action("Dashboard", "KhachThue")" class="skip-link">
                Bỏ qua và vào Dashboard →
            </a>
        </div>
    </div>
</div>

@section scripts {
    <script>
        // Auto redirect after 5 seconds (optional)
        // setTimeout(function() {
        //     window.location.href = '@Url.Action("Dashboard", "KhachThue")';
        // }, 5000);

        // Welcome animation
        document.addEventListener('DOMContentLoaded', function () {
            const cards = document.querySelectorAll('.action-card');
            cards.forEach((card, index) => {
                setTimeout(() => {
                    card.style.opacity = '0';
                    card.style.transform = 'translateY(20px)';
                    setTimeout(() => {
                        card.style.transition = 'all 0.6s ease-out';
                        card.style.opacity = '1';
                        card.style.transform = 'translateY(0)';
                    }, 50);
                }, index * 100);
            });

            // Animate room cards
            const roomCards = document.querySelectorAll('.room-card');
            roomCards.forEach((card, index) => {
                setTimeout(() => {
                    card.style.opacity = '0';
                    card.style.transform = 'translateY(30px)';
                    setTimeout(() => {
                        card.style.transition = 'all 0.7s ease-out';
                        card.style.opacity = '1';
                        card.style.transform = 'translateY(0)';
                    }, 50);
                }, 600 + (index * 100));
            });
        });
    </script>
}
