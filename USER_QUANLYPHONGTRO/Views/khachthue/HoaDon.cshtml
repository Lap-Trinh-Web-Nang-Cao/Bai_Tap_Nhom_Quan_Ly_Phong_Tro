@model List<USER_QUANLYPHONGTRO.Models.ViewModels.KhachThue.TenantInvoiceViewModel>

@{
    ViewBag.Title = "Hóa Đơn Của Tôi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles {
    <style>
        .invoice-page {
            padding: 30px 0;
            background: #f5f7fa;
            min-height: 100vh;
        }

        .page-header {
            background: linear-gradient(135deg, #f6ad55 0%, #ed8936 100%);
            color: white;
            padding: 40px 30px;
            border-radius: 15px;
            margin-bottom: 30px;
        }

        .page-header h1 {
            font-size: 32px;
            font-weight: 700;
            margin-bottom: 10px;
        }

        .invoice-list {
            background: white;
            border-radius: 15px;
            padding: 30px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.08);
        }

        .invoice-item {
            border: 2px solid #e2e8f0;
            border-radius: 12px;
            padding: 25px;
            margin-bottom: 20px;
            transition: all 0.3s;
        }

        .invoice-item:hover {
            border-color: #f6ad55;
            box-shadow: 0 5px 20px rgba(246, 173, 85, 0.15);
        }

        .invoice-header {
            display: flex;
            justify-content: space-between;
            align-items: start;
            margin-bottom: 20px;
            flex-wrap: wrap;
            gap: 15px;
        }

        .invoice-info h3 {
            font-size: 22px;
            font-weight: 700;
            color: #2d3748;
            margin-bottom: 8px;
        }

        .invoice-period {
            color: #718096;
            font-size: 14px;
        }

        .invoice-amount {
            text-align: right;
        }

        .amount-label {
            color: #718096;
            font-size: 13px;
            margin-bottom: 5px;
        }

        .amount-value {
            font-size: 32px;
            font-weight: 800;
            background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .invoice-details {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 15px;
            padding: 20px;
            background: #f7fafc;
            border-radius: 8px;
            margin-top: 15px;
        }

        .detail-row {
            display: flex;
            justify-content: space-between;
            padding: 10px 0;
            border-bottom: 1px solid #e2e8f0;
        }

        .detail-row:last-child {
            border-bottom: none;
            font-weight: 700;
            font-size: 16px;
        }

        .detail-label {
            color: #718096;
        }

        .detail-value {
            color: #2d3748;
            font-weight: 600;
        }

        .badge {
            padding: 8px 16px;
            border-radius: 20px;
            font-size: 13px;
            font-weight: 700;
        }

        .badge-success {
            background: rgba(72, 187, 120, 0.15);
            color: #48bb78;
        }

        .badge-danger {
            background: rgba(252, 129, 129, 0.15);
            color: #fc8181;
        }

        .badge-warning {
            background: rgba(246, 173, 85, 0.15);
            color: #f6ad55;
        }

        .btn-pay {
            background: linear-gradient(135deg, #48bb78 0%, #38a169 100%);
            color: white;
            padding: 10px 25px;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            transition: all 0.3s;
            border: none;
            cursor: pointer;
        }

        .btn-pay:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(72, 187, 120, 0.3);
            text-decoration: none;
            color: white;
        }

        .btn-download {
            background: white;
            color: #667eea;
            border: 2px solid #667eea;
            padding: 10px 25px;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            transition: all 0.3s;
            cursor: pointer;
        }

        .btn-download:hover {
            background: #667eea;
            color: white;
            text-decoration: none;
        }

        .invoice-actions {
            display: flex;
            gap: 10px;
            margin-top: 20px;
            flex-wrap: wrap;
        }

        .empty-state {
            text-align: center;
            padding: 80px 20px;
        }

        .empty-state i {
            font-size: 80px;
            color: #e2e8f0;
            margin-bottom: 20px;
        }

        .empty-state h3 {
            color: #718096;
            margin-bottom: 15px;
        }

        .summary-cards {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .summary-card {
            background: white;
            padding: 25px;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.08);
            border-left: 5px solid var(--color);
        }

        .summary-card.paid {
            --color: #48bb78;
        }

        .summary-card.unpaid {
            --color: #fc8181;
        }

        .summary-card.total {
            --color: #667eea;
        }

        .summary-label {
            color: #718096;
            font-size: 13px;
            margin-bottom: 10px;
        }

        .summary-value {
            font-size: 28px;
            font-weight: 800;
            color: #2d3748;
        }
    </style>
}

<div class="invoice-page">
    <div class="container">
        <div class="page-header">
            <h1><i class="fa fa-receipt"></i> Hóa Đơn Của Tôi</h1>
            <p>Quản lý và thanh toán hóa đơn tiền thuê, điện, nước</p>
        </div>

        <!-- Summary Cards -->
        <div class="summary-cards">
            <div class="summary-card total">
                <div class="summary-label">Tổng Hóa Đơn</div>
                <div class="summary-value">@(Model?.Count ?? 0)</div>
            </div>
            <div class="summary-card paid">
                <div class="summary-label">Đã Thanh Toán</div>
                <div class="summary-value">@(Model?.Count(x => x.TrangThai == "Đã thanh toán") ?? 0)</div>
            </div>
            <div class="summary-card unpaid">
                <div class="summary-label">Chưa Thanh Toán</div>
                <div class="summary-value">@(Model?.Count(x => x.TrangThai == "Chưa thanh toán") ?? 0)</div>
            </div>
        </div>

        <div class="invoice-list">
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <div class="invoice-item">
                        <div class="invoice-header">
                            <div class="invoice-info">
                                <h3>Hóa Đơn Tháng @item.ThangNam</h3>
                                <div class="invoice-period">
                                    <i class="fa fa-calendar"></i>
                                    Kỳ thanh toán: @item.ThangNam
                                </div>
                            </div>
                            <div class="invoice-amount">
                                <div class="amount-label">Tổng tiền</div>
                                <div class="amount-value">@item.TongTien.ToString("N0")đ</div>
                            </div>
                        </div>

                        <div class="invoice-details">
                            <div class="detail-row">
                                <span class="detail-label">Tiền thuê:</span>
                                <span class="detail-value">@item.TienThue.ToString("N0")đ</span>
                            </div>
                            <div class="detail-row">
                                <span class="detail-label">Tiền điện:</span>
                                <span class="detail-value">@item.TienDien.ToString("N0")đ</span>
                            </div>
                            <div class="detail-row">
                                <span class="detail-label">Tiền nước:</span>
                                <span class="detail-value">@item.TienNuoc.ToString("N0")đ</span>
                            </div>
                            <div class="detail-row">
                                <span class="detail-label">Phí khác:</span>
                                <span class="detail-value">@item.PhiKhac.ToString("N0")đ</span>
                            </div>
                        </div>

                        <div class="invoice-actions">
                            <span class="badge badge-@(item.TrangThai == "Đã thanh toán" ? "success" : "danger")">
                                <i class="fa fa-@(item.TrangThai == "Đã thanh toán" ? "check-circle" : "exclamation-circle")"></i>
                                @item.TrangThai
                            </span>

                            @if (item.TrangThai != "Đã thanh toán")
                            {
                                <button class="btn-pay">
                                    <i class="fa fa-credit-card"></i> Thanh Toán Ngay
                                </button>
                            }

                            <button class="btn-download">
                                <i class="fa fa-download"></i> Tải Hóa Đơn
                            </button>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="empty-state">
                    <i class="fa fa-receipt"></i>
                    <h3>Chưa có hóa đơn nào</h3>
                    <p>Các hóa đơn sẽ được tạo tự động vào đầu mỗi tháng</p>
                </div>
            }
        </div>
    </div>
</div>
