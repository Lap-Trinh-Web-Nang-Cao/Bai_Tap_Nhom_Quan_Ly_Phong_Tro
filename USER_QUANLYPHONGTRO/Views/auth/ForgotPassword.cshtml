@{
    ViewBag.Title = "Quên Mật Khẩu";
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
}

<div class="auth-container">
    <div class="auth-banner">
        <div class="banner-content">
            <div class="logo">
                <img src="~/images/logo.png" alt="TroTot Logo" />
                <span>TroTot</span>
            </div>
            <h1 class="banner-title">Tìm Trọ Nhanh – Ở An Tâm</h1>
            <div class="banner-features">
                <div class="feature-item">
                    <i class="fas fa-shield-check"></i>
                    <span>Phòng trọ được xác minh rõ ràng</span>
                </div>
                <div class="feature-item">
                    <i class="fas fa-calendar-check"></i>
                    <span>Đặt lịch xem phòng trực tuyến</span>
                </div>
                <div class="feature-item">
                    <i class="fas fa-user-check"></i>
                    <span>Chủ trọ uy tín, minh bạch</span>
                </div>
            </div>
            <div class="banner-illustration">
                <i class="fas fa-building"></i>
            </div>
        </div>
    </div>

    <div class="auth-form-wrapper">
        <div class="auth-card">
            <div class="login-header">
                <div class="logo-circle">
                    <i class="fas fa-key"></i>
                </div>
                <h2>Quên Mật Khẩu</h2>
                <p>Nhập email để khôi phục mật khẩu</p>
            </div>

            <div class="alert alert-info" style="margin-bottom: 20px;">
                <i class="fas fa-info-circle"></i>
                Tính năng đang được phát triển
            </div>

            <div class="auth-links">
                <p>Quay lại <a href="@Url.Action("Login", "Auth")" class="link-primary">Đăng nhập</a></p>
            </div>
        </div>
    </div>
</div>