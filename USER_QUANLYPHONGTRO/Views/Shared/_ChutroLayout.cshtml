<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Quản Lý Trọ</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

    <style>
        :root {
            --primary-color: #4e73df;
            --secondary-color: #858796;
            --success-color: #1cc88a;
            --info-color: #36b9cc;
            --warning-color: #f6c23e;
            --danger-color: #e74c3c;
            --light-bg: #f8f9fc;
            --sidebar-width: 250px;
        }

        body {
            font-family: 'Roboto', sans-serif;
            background-color: var(--light-bg);
            margin: 0;
            display: flex;
            min-height: 100vh;
        }

        /* Sidebar Styling */
        .sidebar {
            width: var(--sidebar-width);
            background-color: #fff;
            box-shadow: 2px 0 10px rgba(0,0,0,0.1);
            position: fixed;
            height: 100%;
            top: 0;
            left: 0;
            z-index: 100;
            display: flex;
            flex-direction: column;
        }

        .sidebar-brand {
            height: 70px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            font-size: 1.2rem;
            color: var(--primary-color);
            border-bottom: 1px solid #eee;
        }

        .nav-item {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .nav-link {
            display: flex;
            align-items: center;
            padding: 15px 20px;
            color: #555;
            text-decoration: none;
            transition: 0.3s;
            border-left: 4px solid transparent;
        }

        .nav-link:hover, .nav-link.active {
            background-color: #f0f4ff;
            color: var(--primary-color);
            border-left-color: var(--primary-color);
        }

        .nav-link .material-icons, .nav-link .fas {
            margin-right: 10px;
            font-size: 20px;
            width: 24px; /* Cố định chiều rộng để thẳng hàng */
            text-align: center;
        }

        /* Main Content */
        .main-content {
            margin-left: var(--sidebar-width);
            flex: 1;
            padding: 20px;
            width: calc(100% - var(--sidebar-width));
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .sidebar {
                transform: translateX(-100%);
                transition: transform 0.3s;
            }

            .sidebar.show {
                transform: translateX(0);
            }

            .main-content {
                margin-left: 0;
                width: 100%;
            }
        }

        /* Common Dashboard Classes */
        .dashboard-container { max-width: 1200px; margin: 0 auto; }
        .page-title { font-size: 1.8rem; color: #333; margin-bottom: 5px; }
        .page-subtitle { color: #888; font-size: 0.9rem; margin-bottom: 25px; }
        .dashboard-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 30px; }

        /* Helpers */
        .form-control { border: 1px solid #ddd; border-radius: 5px; padding: 10px; width: 100%; box-sizing: border-box; }
        .btn-action { padding: 5px 10px; border-radius: 5px; text-decoration: none; font-size: 0.85rem; display: inline-block; cursor: pointer; }
    </style>
</head>
<body>

    <nav class="sidebar">
        <div class="sidebar-brand">
            <span class="material-icons" style="margin-right: 5px;">apartment</span> QUẢN LÝ TRỌ
        </div>
        <ul class="nav-item">
            <li>
                <a href="@Url.Action("Dashboard", "ChuTro")" class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Dashboard" ? "active" : "")">
                    <span class="material-icons">dashboard</span> Tổng quan
                </a>
            </li>
            <li>
                <a href="@Url.Action("DanhSachPhong", "ChuTro")" class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "DanhSachPhong" ? "active" : "")">
                    <span class="material-icons">meeting_room</span> Quản lý phòng
                </a>
            </li>
            <li>
                <a href="@Url.Action("LichHen", "ChuTro")" class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "LichHen" ? "active" : "")">
                    <span class="material-icons">calendar_today</span> Lịch hẹn / Đặt phòng
                </a>
            </li>
            <li>
                <a href="@Url.Action("HopDong", "ChuTro")" class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "HopDong" ? "active" : "")">
                    <span class="material-icons">assignment</span> Hợp đồng khách thuê
                </a>
            </li>
            <li>
                <a href="@Url.Action("HoaDon", "ChuTro")" class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "HoaDon" ? "active" : "")">
                    <span class="material-icons">receipt_long</span> Hóa đơn & Thu tiền
                </a>
            </li>

            <li style="border-top: 1px solid #eee; margin-top: 10px; padding-top: 10px;">
                <a href="@Url.Action("ThongTinCaNhan", "ChuTro")" class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "ThongTinCaNhan" ? "active" : "")">
                    <span class="material-icons">person</span> Hồ sơ cá nhân
                </a>
            </li>
            <li>
                <a href="@Url.Action("Logout", "Auth")" class="nav-link" style="color: var(--danger-color);">
                    <span class="material-icons">logout</span> Đăng xuất
                </a>
            </li>
        </ul>
    </nav>

    <main class="main-content">
        @RenderBody()
    </main>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>